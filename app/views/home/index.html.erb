<body style="background-image: url(https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcSa_REmoRdtBGx7ASkGeZN1V_LLsf8AGFU9edXqCOQzdQsySBDcWj0tqao);
             background-size: cover;
             background-repeat: no-repeat;">
<div class="container" style = "margin-top: 50px">
    <form style="margin-top:50px;" action="/home/write" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="title" placeholder="title">
        </div>
        <div class="form-group">
            <textarea class='form-control' id="content" name="content" rows="15" placeholder="content"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Posting</button>
    </form>
    
    <% @posts.each do |p| %>
        <div class="well">
            <span style="font-weight:bold;">
            <%= p.title %></br>
            </span>
            <%= p.content %><hr>
            <p style="font-size:10px;" style="font-weight:bold;">
            단어수 : <%= p.content.split.size %><br>
            공백포함 : <%= p.content.length %> <br>
            공백포함안함 : <%= p.content.delete(" ").length %>
            </p>
                <form style="margin-top:30px;" action="/home/reply_write" method="POST">
                    <div class="form-group">
                        <input type="hidden" name="id_of_post" value=<%= p.id %>>
                        <textarea class='form-control' id="content" name="content" rows="2">
                        </textarea>
                    </div>
                    <button type="submit" class="btn btn-default">Replying</button>
                </form>
                <% p.replies.each do |r| %>
                <p><%=r.content%></p>
                <%end%>
        </div>
    <% end %>
 </div>
 </body>